<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ian.valentinesdaygif">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GifApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ListActivity"
            android:label="@string/gif_list" />

        <activity
            android:name=".activity.MoreActivity"
            android:label="@string/button_more" />

        <activity
            android:name=".activity.OriginalActivity"
            android:label="@null" />
        
        <activity android:name=".activity.SearchActivity" />
    </application>

</manifest>